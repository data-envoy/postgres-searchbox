{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "lib": [
      "ES2021",
      "DOM"
    ],
    "module": "ESNext",
    "target": "ESNext",
    "strict": true,
    "noUnusedLocals": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@scripts/*": [
        "scripts/*"
      ]
    },
    "declaration": true
  },
  "include": [
    "scripts/**/*.ts",
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}