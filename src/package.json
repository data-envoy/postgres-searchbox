{
  "name": "postgres-searchbox",
  "version": "1.0.5",
  "description": "Enables react-instantsearch to work directly on PostgreSQL tables",
  "type": "module",
  "exports": {
    ".": "./index.js",
    "./client": "./client.js"
  },
  "scripts": {
    "script:create-index": "PG_SB_CREATE_INDEX=true node ./scripts/create-index.js",
    "script:drop-index": "PG_SB_DROP_INDEX=true node ./scripts/create-index.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --runInBand",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --runInBand --watchAll"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dekimir/postgres-searchbox.git"
  },
  "keywords": [
    "postgres",
    "search",
    "searchbox",
    "instantsearch",
    "algolia",
    "elastic",
    "react"
  ],
  "author": "Dejan Mircevski",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dekimir/postgres-searchbox/issues"
  },
  "homepage": "https://github.com/dekimir/postgres-searchbox#readme",
  "dependencies": {
    "jest-mock": "^29.5.0",
    "pg": "^8.8.0",
    "pg-format": "^1.0.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "express": "^4.18.2",
    "jest": "^29.5.0"
  }
}
