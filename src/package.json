{
  "name": "postgres-searchbox",
  "version": "1.0.6",
  "description": "Enables react-instantsearch to work directly on PostgreSQL tables",
  "type": "module",
  "exports": {
    ".": "./index.js",
    "./client": "./client.js"
  },
  "scripts": {
    "script:create-index": "PG_SB_CREATE_COL_AND_INDEX=true node ./scripts/create-index.js",
    "script:drop-index": "PG_SB_DROP_COL_AND_INDEX=true node ./scripts/create-index.js",
    "script:create-movies": "PG_SB_CREATE_MOVIES=true node ./scripts/create-movies.js",
    "script:drop-movies": "PG_SB_DROP_MOVIES=true node ./scripts/create-movies.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --runInBand",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --runInBand --watchAll"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dekimir/postgres-searchbox.git"
  },
  "keywords": [
    "postgres",
    "search",
    "searchbox",
    "instantsearch",
    "algolia",
    "elastic",
    "react"
  ],
  "author": "Dejan Mircevski",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dekimir/postgres-searchbox/issues"
  },
  "homepage": "https://github.com/dekimir/postgres-searchbox#readme",
  "dependencies": {
    "jest-mock": "^29.5.0",
    "pg": "^8.8.0",
    "pg-format": "^1.0.4",
    "pg-native": "file:./modules/pg-native",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "express": "^4.18.2",
    "jest": "^29.5.0",
    "pg-copy-streams": "^6.0.5",
    "postgres": "^3.3.4"
  }
}
